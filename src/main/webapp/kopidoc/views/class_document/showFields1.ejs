<section>
  <a name="fields" />
  <header>
    <h2>Fields</h2>
    <ul class="filters">
      <li>
        <select class="filterScope">
          <option value="">All Scopes</option>
        </select>
      </li>
      <li>
        <select class="filterTypes">
          <option value="">All Types</option>
        </select>
      </li>
      <!--
      <li>
        <button class="filterInherited">Show Inherited</button>
      </li>
      -->
      <!--
      <li>
        <input type="checkbox" class="abstract" />
        <input type="checkbox" class="static" />
        <input type="checkbox" class="final" />
      </li>
      -->
    </ul>
  </header>
  <ol>
    <% for(i in fields) { %>
    <% var field = fields[i]; %>
    <% var fieldName = field.name.split('.').slice(-1)[0] %>
    <li>
      <header class="<%= $.View('//kopidoc/views/class_document/showScope', 
                                                   {public: field.isPublic,
                                                    protected: field.isProtected,
                                                    private: field.isPrivate} )%>">
        <label><%= fieldName %></label>
        <%= $.View('//kopidoc/views/class_document/showType1', {type: field.type,
                             title: null, cache: false })%>
        <span class="describedBy"></span>
        <%= field.comment %>
        <% if(field.isPublic) { %><span class="final"></span> <%}%>
        <% if(field.isProtected) { %><span class="final"></span> <%}%>
        <% if(field.isPrivate) { %><span class="final"></span> <%}%>
        <% if(field.isFinal) { %><span class="final"></span> <%}%>
      </header>
    </li>
    <% } %>
  </ol>
</section>
